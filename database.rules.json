{
  "rules": {
    "teams": {
      ".read": "auth != null",
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    },
    "teamrequests": {
      "$teamid": {
        ".read": "root.child('teams').child(auth.uid).child($teamid).val() === true",
        ".write": "auth != null"
      }
    },
    "sprints": {
      "$teamid": {
        ".read": "root.child('teams').child($teamid).child('members').child(auth.uid).val() === true",
        ".write": "root.child('teams').child(auth.uid).child($teamid).val() === true"
      }
    },
    "wasteitems": {
      "$teamid": {
        "$sprintid": {
          ".read": "root.child('teams').child($teamid).child('members').child(auth.uid).val() === true",
          ".write": "root.child('teams').child($teamid).child('members').child(auth.uid).val() === true"
        }
      }
    }
  }
}
